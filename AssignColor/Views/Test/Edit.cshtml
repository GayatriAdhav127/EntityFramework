@model AssignColor.Models.Product

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
 <body>
        <div class="container ">
            <div class="row">
                <div class="col-md-12">
                    <h4>Product</h4>
                    @using (Html.BeginForm())
                    {
                        <div>
                            @Html.LabelFor(p => p.ProductName)
                            <div>
                                @Html.EditorFor(p => p.ProductName)
                            </div>
                        </div>
                        <div>
                            @Html.LabelFor(p => p.MfgName)
                            <div>
                                @Html.EditorFor(p => p.MfgName)
                            </div>
                        </div>
                        <div>
                            @Html.LabelFor(p => p.Price)
                            <div>
                                @Html.EditorFor(p => p.Price)
                            </div>
                        </div>
                        <div>
                            @Html.Label("Select Color:")
                            <div>
                                @Html.Action("GetCheckBox")
                            </div>
                        </div>
                        <div>
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
